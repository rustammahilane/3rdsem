#include <stdio.h>
#include <math.h>

int binaryToOctal(long num){
    int octal = 0, decimal = 0, i = 0;
    
    while (num != 0){
        decimal = decimal + (num % 10) * pow(2, i);
        i++;
        num = num / 10;
    }
    
    i = 1;
    while (decimal != 0){
        octal = octal + (decimal % 8) * i;
        decimal = decimal / 8;
        i = i * 10;
    }
    return octal;
}

int main(){
    long num;
    
    // Asking for Input
    printf("Enter a binary number: ");
    scanf("%ld", &num);
    
    printf("Equivalent Octal Number is: %d", binaryToOctal(num));
    return 0;
}
